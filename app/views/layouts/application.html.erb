<!DOCTYPE html>
<html>
  <head>
    <title>MetaOnRails</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag 'https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-default">
      <div class="container">
        <div class="navbar-header" style="display: flex; width: 100%; justify-content: space-between">
          <a class="navbar-brand" href="#">MetaOnRails</a>
          <div style="display: flex; align-items: center;">
          <ul class="nav navbar-nav" style="display: inline-block;">
            <li style="display: inline-block; margin: 0 20px;"><%= link_to 'Home', home_path %></li>
            <li style="display: inline-block; margin: 0 20px;"><%= link_to 'Create Post', new_post_path %></li>
          </ul>
          </div>
        </div>
      </div>
    </nav>

    <div class="container">
      <%= yield %>
    </div>
  </body>
</html>
